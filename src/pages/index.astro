---
import BaseLayout from "@/layouts/BaseLayout.astro";
import AboutSection from "@/components/Home/about.astro";
import ChooseUsSection from "@/components/Home/choose-us.astro";
---
<BaseLayout pageTitle = "Home">
        <!-- banner-section -->
<section class="banner-section centred relative">
    <div class="pattern-layer" style="background-image: url('assets/images/shape/shape-2.png');"></div>
    <div class="banner-carousel owl-theme owl-carousel owl-dots-none">
        <div class="slide-item relative pt-32 pb-48">
            <div class="image-layer absolute inset-0 bg-cover bg-center" style="background-image: url('assets/images/banner/banner-1.jpg');"></div>
            <div class="auto-container">
                <div class="content-box relative">
                    <h1 class="text-white block text-5xl leading-tight mb-6">Make Your Home Like Garden</h1>
                    <p class="text-white text-lg leading-relaxed mb-10">Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
                    <div class="btn-box">
                        <a href="contact.html" class="theme-btn btn-one">Hire Us Now</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="slide-item relative pt-32 pb-48">
            <div class="image-layer absolute inset-0 bg-cover bg-center" style="background-image: url('assets/images/banner/banner-2.jpg');"></div>
            <div class="auto-container">
                <div class="content-box relative">
                    <h1 class="text-white block text-5xl leading-tight mb-6">We have Great Achievements</h1>
                    <p class="text-white text-lg leading-relaxed mb-10">Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
                    <div class="btn-box">
                        <a href="contact.html" class="theme-btn btn-one">Hire Us Now</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="slide-item relative pt-32 pb-48">
            <div class="image-layer absolute inset-0 bg-cover bg-center" style="background-image: url('assets/images/banner/banner-3.jpg');"></div>
            <div class="auto-container">
                <div class="content-box relative">
                    <h1 class="text-white block text-5xl leading-tight mb-6">We Provides Garden Solutions</h1>
                    <p class="text-white text-lg leading-relaxed mb-10">Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
                    <div class="btn-box">
                        <a href="contact.html" class="theme-btn btn-one">Hire Us Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
        <!-- banner-section end -->
		<AboutSection />
		<ChooseUsSection />
</BaseLayout>
