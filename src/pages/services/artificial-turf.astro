---
import data from '@/customization/services.js'; 
import BaseLayout from "../../layouts/BaseLayout.astro";
import ContentWrapper from "../../layouts/ContentWrapper.astro";
import Banner from '../../components/small_banner/index.astro'; 
import ImageComponent from '@/components/image_component.astro'
import Form from "@/components/artifical_turf_calc/index.astro";
---
<BaseLayout 
pageTitle="Turf Calculator"
CTA_Banner={true}
customSlotStyle="mt-[100px] sm:mt-[185px] [@media(min-width:992px)]:mt-[180px] min-h-[100vh] sm:min-h-[300vh] mb-[10px] flex flex-col flex-grow overflow-x-hidden"
>
    <Banner 
        title = "Artificial Turf Installation" 
        subtitle = "Enjoy the look of real grass without the upkeep â€“ artificial turf that's always perfectly manicured."
        />
    <ContentWrapper>
    <div
        class = "flex flex-col sm:flex-row sm:gap-10 grow-[3]"
    >
        <div
            class = "grow-0"
        >
        <section
            class = "my-10"
        >
            <h3
                class = "text-[30px] mb-5"
            >Description</h3>
            <div>{data[3].description}</div>
        </section>
        {data[3].features &&
            <section
                class = "my-10"
            >
                <h3
                    class = "text-[30px] mb-5"
                >Features</h3>
                <ul
                    class = "list-disc list-inside"
                >
                    {data[3].features.map((feature: string) =>
                        <li class = "list-disc list-inside">{feature}</li>)}
                </ul>
            </section>
        }
        </div>
        {data[3].image1 && 
            <ImageComponent 
                image={data[3].image1}
                altText = "Artificial Turf"
                customStyle = "w-auto h-auto overflow-hidden my-10 rounded-lg mx-auto grow"
                />
        }
        </div>
        {data[3].promise && 
            <section
                class = "my-10"
            >
                <h3
                    class = "text-[30px] mb-5"
                >What we promise to deliver</h3>
                <div>{data[3].promise}</div>
            </section>
        }
    <Form />
    </ContentWrapper>
</BaseLayout>