---
import AnimatedGrass from "../animated_grass/index.astro"; 
import TitleComponent from '../TitleComponent/index.astro';
import defaultImage from '@/assets/images/banner/japanese-garden.jpg';
const {
    image = '../../src/assets/images/banner/japanese-garden.jpg',
    title, 
    subtitle,
    button_label, 
    link, 
} = Astro.props; 

---
<div
    id = "small_banner"
    class={`relative h-[250px] w-full bg-center before:absolute  before:content-[''] before:bg-[rgba(0,0,0,0.4)] before:w-full before:h-full before:z-10`}
>   
    <img 
        src = {image ? image : defaultImage} 
        class = "w-full h-full object-cover"
        alt="banner image"
    />
    {title && 
        <TitleComponent 
            {title}
            {subtitle}
            {button_label}
            {link}
            wrapperStyle = "w-11/12 mx-auto"
            titleStyle = "whitespace-nowrap text-white text-center text-[50px] leading-[50px] sm:text-[90px] sm:leading-[90px] fadeInUp font-['Prata',serif]"
        />
    }
    <AnimatedGrass /> 
</div>
