---
/* Renders a component that displays thumbnails of the most recent posts */
import "./style.css"
import PostGrid from './post_grid.astro'; 
const allPosts = await Astro.glob("../../../pages/posts/*.md"); 
const RecentPosts = allPosts.sort((a, b)=> {
        var a_date : Date = new Date(a.frontmatter.pubDate)
        var b_date : Date = new Date(b.frontmatter.pubDate)
        return b_date.getTime() - a_date.getTime();
        }).slice(0,3)
---
<div class="relative block pt-[30px] pr-[40px] pl-[40px] rounded-lg mb-[50px] border-2 border-[#dbdbdb] h-fit">
    <h3 class="text-4xl mb-[15px] font-['Prata',serif]">Recent Posts</h3>
    <PostGrid {RecentPosts}/>
</div>