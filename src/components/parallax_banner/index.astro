---
//import BackImg from '@/assets/slides/hero/banner-1.jpg';
const {
    BackImg,
    title,
    text = "We Provide Hassle-Free Garden Solutions.", 
    CTA_link,
    btnText ="Learn How  We Do?",  
} = Astro.props;  
---
<!-- cta-section -->
<section class="cta-section relative pt-[140px] pb-[140px]" style={`background-image: url(${BackImg});`}>
    <div class="auto-container">
        <div class="relative flex flex-col gap-1 sm:flex-row clearfix">
            <div class="sec-title light float-left">
                <span class="sub-title">{title.toUpperCase()}</span>
                <h2
                    class=""
                >{text}</h2>
            </div>
            <div class="btn-box float-right mt-[50px] whitespace-nowrap">
                <a href={CTA_link} class="theme-btn btn-one">{btnText}<i class="far fa-long-arrow-right"></i></a>
            </div>
        </div>
    </div>
</section>
<!-- cta-section end -->
