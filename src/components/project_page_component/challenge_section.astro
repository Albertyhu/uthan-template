---
const {
    challenge, 
    image
} = Astro.props; 
import ImageComponent from "./image_component.astro";
import "./style.css"; 
---
<section 
    class = "my-10"
>
    <h2>Project Challenges</h2>
    <div
        class = "grid sm:grid-cols-[auto_1fr] gap-10"
    >
        <div>{challenge}</div>
        {image && 
            <ImageComponent 
                image = {image} 
                altText="challenge project"
            />
        }
    </div>
</section>