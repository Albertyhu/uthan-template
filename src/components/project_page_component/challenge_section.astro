---
const {
    challenge, 
    image
} = Astro.props; 
import ImageComponent from "../image_component.astro";
import "./style.css"; 
---
<section 
    class = "my-10"
>
    <h2>Project Challenge</h2>
    <div
        class = "flex flex-col-reverse sm:flex-row sm:gap-10"
    >
        <div
            class = "grow basis-80 justify-center"
        >{challenge}</div>
        {image && 
            <ImageComponent 
                image = {image} 
                altText="challenge project"
            />
        }
    </div>
</section>